alias ps="pnpm start"
alias pt="pnpm test"
alias px="pnpm exec"

# NPM aliases
alias n="npm"
alias nr="npm run"
alias ns="npm start"
alias nt="npm test"
alias nrd="npm run down"
alias nru="npm run up"
alias nrud="npm run up:dependencies"
alias nrdu="npm run down && docker-compose pull && npm run up"

