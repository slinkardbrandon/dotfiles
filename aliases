alias dotfiles="cd ${DOTFILES}"
alias .files="dotfiles"
alias g="git"
alias c="code"
alias dc="docker-compose"
alias devserver="docker run -d -p 5000:5000 --restart=always --name registry registry:2"

# Yarn aliases
alias y="yarn"


# pNPM aliases
alias p="pnpm"
