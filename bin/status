#!/usr/bin/env bash

main() {
  local dayOfWeek=$(date '+%A');
  local days='';

  if [ "$dayOfWeek" = "Friday" ]; then
    days='3';
  else
    days='1';
  fi

  local requestBody='{"jql":"project in (VP,VO) AND updated >= -';

  requestBody+=$days
  requestBody+='d AND assignee = currentUser() order by updated DESC","startAt":0,"maxResults":10,"fields":["key","status","summary"]}';

  echo -e "Fetching tickets modified in the last $days day(s) from $JIRA_URL\n\n"
  echo '{"jql":"project in (VP,VO) AND updated >= -1d AND assignee = currentUser() order by updated DESC","startAt":0,"maxResults":10,"fields":["key","status","summary"]}'
  echo $requestBody

  # Some day corp will give me an api key. RIP
  local ticketInformation=$(curl -u "${JIRA_USERNAME}:${NOT_CORP_PASSWORD}" \
    -X POST \
    -H "Content-Type: application/json" \
    --data ${requestBody} \
    --silent \
    --show-error \
    "${JIRA_URL}/rest/api/2/search");

  echo -e "\033[1mYesterday\033[0m";
  echo $ticketInformation | jq -r '.issues[] | { url: ("\u0009\u2022 " + .key), summary: (.fields.summary + . "\n") } | join(" - ")';

  echo -e "\n\033[1mToday\033[0m";
  # print a tab (\11) then a bullet point
  printf "\11\342\200\242"

  echo -e "\n\033[1mBlocks\033[0m";
  # print a tab (\11) then a bullet point
  printf "\11\342\200\242"

  echo -e "\n"
}

main "$@"