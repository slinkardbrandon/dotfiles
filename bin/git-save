#! /usr/bin/env bash

# Courtesy of Josh Manders (https://github.com/joshmanders/dotfiles/blob/master/bin/git-save)

function main () {
  local files=("${@}")
  local length=${#files[@]}
  local message=${files[$(($length - 1))]}
  unset files[${#files[@]}-1]

  if [ ${#files[@]} -eq 0 ]; then
    git add -A
    git commit -m "${message}"
  else
    git add ${files[@]}
    git commit -m "${message}"
  fi
}

main "$@"